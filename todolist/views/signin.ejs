<%- include("particals/header.ejs")%>
<%- include("particals/nav.ejs")%>

<form action="/signin" class="m-auto bg-light w-25 mt-5" method="post">
  <div class="form-group">
    <label for="email">Email:</label>
    <input name="email" id="email" type="email" class="form-control w-50" required>
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input name="password" id="password" type="password" class="form-control w-50" required>
  </div>
  <p class="text-center">
    <a href="/getemail">Forgot password</a>
  </p>
  <button class="btn btn-primary">Sign In</button>
  <p>Don't have an account? <a href="/signup">Sign up</a></p>
</form>

<%- include("particals/footer.ejs")%>
